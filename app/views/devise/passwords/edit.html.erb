<h2>Change your password</h2>
<div class="col-lg-7 col-md-9 col-sm-8">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, 'New password', class: 'form-label' %>
      <% if @minimum_password_length %>
        <small id="passwordHelp" class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, 'Confirm new password', class: 'form-label' %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit 'Change my password', class: 'btn btn-primary w-100 mt-4 mb-0'%>
    </div>
  <% end %>
</div>
<%= render 'devise/shared/links' %>

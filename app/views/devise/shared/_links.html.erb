<div class="col-lg-7 col-md-9 col-sm-8">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class: "btn w-100 mt-2 mb-0 btn-outline-primary" %><br />
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "btn w-100 mt-2 mb-0 btn-outline-info" %><br />
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn w-100 mt-2 mb-0 btn-outline-danger" %><br />
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_user_confirmation_path(resource_name), class: "btn w-100 mt-2 mb-0 btn-outline-warning"%><br />
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "btn w-50 mt-2 mb-0 btn-outline-primary" %><br />
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "Sign in with #{t (provider)}", omniauth_authorize_path(resource_name, provider), class: "btn w-100 mt-2 mb-0 #{(provider.to_s == 'facebook') ? 'btn-outline-primary' : 'btn-outline-secondary'}",method: :post %>
    <% end %>
  <% end %>
</div>

<h2>Log in</h2>

<div class="col-lg-7 col-md-9 col-sm-8">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control form-control-md' %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control form-control-md' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check form-switch mb-3">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me, class: 'form-check-label' %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit 'Log in', class: 'btn btn-primary w-100 mt-4 mb-0' %>
    </div>
  <% end %>
</div>

<%= render 'devise/shared/links' %>

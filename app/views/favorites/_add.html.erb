<%= turbo_frame_tag dom_id(product) do %>
  <%= form_with(model: [product, current_user.favorites.build]) do |f| %>
    <%= f.button bicon('bi-heart-fill', class: 'dot dot-add', style: 'color: cornflowerblue;'),
        class: 'btn-heart', 'data-bs-toggle': 'tooltip', 'data-bs-placement': 'right',
        title: 'Add Favorite' %>
  <% end %>
<% end %>